<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit</title>
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css">

    <!-- jQuery library -->
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.slim.min.js"></script>

    <!-- Popper JS -->
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>

    <!-- Latest compiled JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js"></script>
</head>

<body>
    <div class="container">
      <div class="row">
        <form action="/update" method="POST" class="container mt-5">
          <div class="form-group">REGISTER</div>
          <% for(let i=0; i < DataEdit.length; i++) { %>
          <input type="text" name="ID" value="<%= DataEdit[i].id %>" hidden>
          <div class="form-row">
            <div class="form-group col-6">
              <label for="F-name">First Name</label>
              <input type="text" class="form-control" name="firstName" placeholder="First Name" value="<%= DataEdit[i].firstName %>">
            </div>
            <div class="form-group col-6">
              <label for="L-name">Last Name</label>
              <input type="text" class="form-control" name="lastName" placeholder="Last Name" value="<%= DataEdit[i].lastName %>">
            </div>
          </div>
            <div class="form-group">
              <label for="address">Address</label>
              <input type="text" class="form-control" name="address" placeholder="1234 Main St" value="<%= DataEdit[i].address %>">
            </div>
            <div class="form-row">
              <div class="form-group col-6">
                <label for="phone">Phone Number</label>
                <input type="text" class="form-control" name="phone" placeholder="09xxxxxxxx" value="<%= DataEdit[i].phone %>">
              </div>
              <div class="form-group col-3">
                <label for="sex">Sex</label>
                <select name="sex" class="form-control">
                  <option selected value="0">Female</option>
                  <option value="1">Male</option>
                </select>
              </div>
              <div class="form-group col-3">
                <label for="RoleId">Role</label>
                <select name="RoleId" class="form-control" >
                  <option selected value="R1">Admin</option>
                  <option value="R2">Doctor</option>
                  <option value="R3">Patient</option>
                </select>
              </div>
            </div>
            <button type="submit" class="btn btn-primary">Update</button>
            <% } %>
          </form>
      </div>
    </div>
</body>

</html>